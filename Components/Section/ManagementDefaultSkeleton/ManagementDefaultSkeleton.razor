<div class="flex flex-col gap-10">
  <div class="flex justify-between">
    <input type="text" class="border-grey border-2 rounded-lg p-2 focus:outline-none" placeholder="Digite aqui">

    <NavLink href="@ButtonHRef" class="bg-orange-1 p-3 rounded-lg text-white flex gap-2.5 font-medium">
      @ButtonText
      <img src="./icons/plus.svg" />
    </NavLink>
  </div>

  <ul>
    @ListHeader
    @ListItems
  </ul>
</div>

@code {
  [Parameter]
  public required string ButtonText { get; set; }
  [Parameter]
  public required string ButtonHRef { get; set; }
  [Parameter]
  public required RenderFragment ListHeader { get; set; }
  [Parameter]
  public required RenderFragment ListItems { get; set; }
}